<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">


    <LinearLayout
        android:id="@+id/name_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:text="课程名称："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="14sp"
            android:id="@+id/name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teacher_container"
        app:layout_constraintTop_toBottomOf="@id/name_container"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:text="授课老师："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="14sp"
            android:id="@+id/teacher"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/place_container"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/teacher_container"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:text="上课地点："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="14sp"
            android:id="@+id/place"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_container"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/place_container"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:text="上课时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/time_btn"
            android:textSize="11sp"
            android:text="设置时间"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="37dp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/time_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_back"
            android:text="返回"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="80dp"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/btn_save"
            android:text="保存"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
