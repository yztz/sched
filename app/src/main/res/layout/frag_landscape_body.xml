<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/top_left"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/landscape_time_width"
        android:layout_height="@dimen/landscape_day_height"/>

    <LinearLayout
        android:background="@color/white"
        android:elevation="10dp"
        android:id="@+id/day_of_week"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/top_left"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/landscape_day_height">



    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:elevation="10dp"
        android:id="@+id/time"
        app:layout_constraintTop_toBottomOf="@id/top_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="@dimen/landscape_time_width"
        android:layout_height="0dp">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        app:layout_constraintTop_toBottomOf="@id/day_of_week"
        app:layout_constraintLeft_toRightOf="@id/time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>